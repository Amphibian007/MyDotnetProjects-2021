@model TakaModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <header>
        <div class="jumbotron">
            <h3>This is the finest taka calculator in the world</h3>
        </div>
    </header>
    <main>
        <form method="post">
            <div class="row">
                <label asp-for="@Model.MonthlyInvestment" class="control-label col-3">Enter your Monthly investment:</label>
                <input asp-for="@Model.MonthlyInvestment" class="form-control col-3" />
                <span asp-validation-for="@Model.MonthlyInvestment" class="text text-danger col-3"></span>
            </div>
            <div class="row">
                <label asp-for="@Model.YearlyInterestRate" class="control-label col-3">Enter your yearly interest rate here:</label>
                <input asp-for="@Model.YearlyInterestRate" class="form-control col-3" />
                <span asp-validation-for="@Model.YearlyInterestRate" class="text text-danger col-3"></span>
            </div>
            <div class="row">
                <label asp-for="@Model.Years" class="control-label col-3">Enter years here:</label>
                <input asp-for="@Model.Years" class="form-control col-3" />
                <span asp-validation-for="@Model.Years" class="text text-danger col-3"></span>
            </div>
            <div class="row">
                <label class="control-label col-3">Your future taka is here:</label>
                <input value="@ViewBag.FutureTaka" class="form-control col-3" readonly />
            </div>
            <div class="row">
                <button type="submit" class="btn btn-outline-success">Enter</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Refresh</a>
            </div>
        </form>
    </main>
</div>
