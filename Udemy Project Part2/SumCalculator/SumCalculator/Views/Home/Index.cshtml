@model Digit
@{
    ViewData["Title"] = "Home Page";
}

<form method="post">
    <div class="row">
        <label asp-for="Num1" class="control-label col-3">Enter number 1:</label>
        <input asp-for="Num1" class="form-control col-3" />
    </div>

    <div class="row">
        <label asp-for="Num2" class="control-label col-3" >Enter number 2:</label>
        <input asp-for="Num2"  class="form-control col-3" />
    </div>

    <div class="row">
        <label asp-for="Operation" class="control-label col-3">Choose operation:</label>
        <select asp-for="Operation" class="form-control col-3" >
            <option value="+">Addition</option>
            <option value="-">Subtraction</option>
            <option value="*">Multiplication</option>
            <option value="/">Divisioin</option>
        </select>
    </div>
    <div class="row">
        <label class="control-label col-3">Calculation Result is </label>
        <input value="@ViewBag.Result" readonly  class="form-control col-3" />
    </div>
    <div class="row">
        <button type="submit" class="btn btn-outline-success">Calculate</button>
        <a asp-action="Index" class="btn btn-outline-primary">Refresh</a>
    </div>
</form>
