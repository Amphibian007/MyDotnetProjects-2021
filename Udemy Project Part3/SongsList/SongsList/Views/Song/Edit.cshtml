@model Song
@{
    ViewBag.Title = ViewBag.Action + " Song";
}

<h1>@ViewBag.Action</h1>

<form asp-action="Edit" method="post">
   <div asp-validation-summary="All" class="text-black-50"></div>
    <input type="hidden" asp-for="@Model.Id"/>
    <div class="form-group">
        <label asp-for="@Model.Name">Enter song name</label>
        <input asp-for="@Model.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Year">Enter year</label>
        <input asp-for="@Model.Year" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Rating">Enter rating</label>
        <input asp-for="@Model.Rating" class="form-control" />
    </div>
    <button class="btn btn-primary">@ViewBag.Action</button>
    <button class="btn btn-secondary" asp-controller="Home" asp-action="Index">Cancel</button>
</form>