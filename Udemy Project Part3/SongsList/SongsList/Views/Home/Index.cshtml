@model List<Song>
@{
    ViewData["Title"] = "Home Page";
}

<h2 class="text-primary">List of all songs</h2>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Name</td>
            <td>Year</td>
            <td>Rating</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Year</td>
                <td>@item.Rating</td>
                <td>
                    <a asp-controller="Song" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-controller="Song" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Song" asp-action="Create">Add new song</a>