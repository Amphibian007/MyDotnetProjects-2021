@model List<Sport>
@{
    ViewData["Title"] = "Home Page";
}
<h2 class="text-primary">All the lists of the sports</h2>
<br />
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <td>Name</td>
            <td>Price</td>
            <td>Type</td>
            <td>Rating</td>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Type.Name</td>
                <td>@item.Rating</td>
                <td>
                    <a asp-action="Edit" asp-controller="Sport" class="btn btn-outline-primary" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Delete" asp-controller="Sport" class="btn btn-outline-danger" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<a asp-action="Create" asp-controller="Sport" class="btn btn-outline-success">Create</a>
