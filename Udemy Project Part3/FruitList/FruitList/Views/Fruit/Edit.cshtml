@model Fruit
@{
    ViewBag.Title = ViewBag.Action;
}

<h2 class="text-primary">@ViewBag.Action</h2>
<form asp-action="Edit" method="post">
    <input asp-for="@Model.Id" type="hidden" />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="@Model.Name">Enter fruit name:</label>
        <input asp-for="@Model.Name" class="form-control" />
    </div>   <div class="form-group">
        <label asp-for="@Model.Year">Enter year:</label>
        <input asp-for="@Model.Year" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.GenreId">Enter the genre</label>
        <select asp-for="@Model.GenreId" class="form-control">
            <option value="">Select the value</option>
            @foreach (var item in ViewBag.Genres)
            {
                <option value="@item.GenreId">@item.Name</option>
            }

        </select>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Rating">Enter fruit rating:</label>
        <input asp-for="@Model.Rating" class="form-control" />
    </div>
    <button class="btn btn-outline-success">@ViewBag.Action</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">Back</a>
</form>

