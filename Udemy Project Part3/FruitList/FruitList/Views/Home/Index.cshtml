@model List<Fruit>
@{
    ViewData["Title"] = "Home Page";
}

<h2 class="text-info text-center">List of all fruits</h2>
<br />
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Name</td>
            <td>Year</td>
            <td>Genre</td>
            <td>Rating</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Year</td>
                <td>@item.Genre.Name</td>
                <td>@item.Rating</td>
                <td>
                    <a asp-controller="Fruit" asp-action="Edit" class="btn btn-outline-success" asp-route-id="@item.Id" asp-route-slug="@item.Slug">Edit</a>
                    <a asp-controller="Fruit" asp-action="Details" class="btn btn-outline-primary" asp-route-id="@item.Id" asp-route-slug="@item.Slug">Details</a>
                    <a asp-controller="Fruit" asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@item.Id" asp-route-slug="@item.Slug">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<a asp-action="Create" asp-controller="Fruit" class="btn btn-outline-primary">Add New Fruit</a>
