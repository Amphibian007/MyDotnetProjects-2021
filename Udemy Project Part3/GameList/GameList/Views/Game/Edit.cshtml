@model Game
@{
    ViewBag.Title = ViewBag.Action;
}

<h1>@ViewBag.Action</h1>
<form asp-action="Edit" method="post">
   <div asp-validation-summary="All"></div>
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name">Enter game name</label>
        <input asp-for="Name" class="form-control" />
        
    </div>
    <div class="form-group">
        <label asp-for="Year">Enter game year</label>
        <input asp-for="Year" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Rating">Enter game rating</label>
        <input asp-for="Rating" class="form-control" />
    </div> 
        <button class="btn btn-outline-success">@ViewBag.Action</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">Back</a> 
</form>

