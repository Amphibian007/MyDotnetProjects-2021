@model List<Mobile>
@{
    ViewData["Title"] = "Home Page";
}

<h2 class="text-primary">List of all moblies are here</h2>
<br />
<table class="table table-striped table-bordered">

    <thead>
        <tr>
            <td>Name</td>
            <td>Price</td>
            <td>Company</td>
            <td>Rating</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Company.Name</td>
                <td>@item.Rating</td>
                <td>
                    <a asp-controller="Mobile" asp-action="Edit" class="btn btn-outline-primary" asp-route-id="@item.Id">Edit</a>
                    <a asp-controller="Mobile" asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<a asp-controller="Mobile" asp-action="Create" class="btn btn-outline-primary">Create</a>
