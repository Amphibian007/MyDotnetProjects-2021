@model Movie
@{
    ViewBag.Title = ViewBag.Action;
}

<h2 class="text-primary">@ViewBag.Action</h2>
<br />
<form method="post" asp-action="Edit">
    <input asp-for="MovieId" type="hidden" />
    <div class="form-group">
        <label asp-for="@Model.Name">Enter movie name</label>
        <input asp-for="@Model.Name" class="form-control" />
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Year">Enter movie year</label>
        <input asp-for="@Model.Year" class="form-control" />
        <span asp-validation-for="@Model.Year" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.GenreId">Enter the type</label>
        <select asp-for="@Model.GenreId" class="form-control">
            <option value="">Select the type</option>
            @foreach (var item in ViewBag.Genres)
            {
                <option value="@item.GenreId">@item.Name</option>
            }
        </select>
        <span asp-validation-for="@Model.GenreId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Rating">Enter your rating</label>
        <input asp-for="@Model.Rating" class="form-control" />
        <span asp-validation-for="@Model.Rating" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-outline-success">@ViewBag.Action</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">Back</a>
</form>

