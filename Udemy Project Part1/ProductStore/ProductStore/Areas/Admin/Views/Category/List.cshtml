@model List<Category>
@{
    ViewBag.Title = "Category Manager";
}
<h1>@ViewBag.Title</h1>
<div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
            <tr>
                <td>@category.Name</td>
                <td>
                    <a asp-action="Update" asp-controller="Category" asp-route-id="@category.CategoryID">Update</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-controller="Category" asp-route-id="@category.CategoryID">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
    <a asp-controller="Category" asp-action="Add" class="btn btn-outline-primary">Add new category</a>
</div>
