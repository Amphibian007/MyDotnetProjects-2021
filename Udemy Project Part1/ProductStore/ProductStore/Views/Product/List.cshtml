@model List<Product>
@{
    ViewData["Title"] = "List";
}

<h1>List of all products</h1>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Product Id</td>
            <td>Product Name</td>
            <td>Product Price</td>
            <td></td>
        </tr>      
    </thead>

    <tbody>
       @foreach(var item in Model)
       {
           <tr>
               <td>@item.ProductId</td>
               <td>@item.Name</td>
               <td>@item.Price</td>
               <td><a asp-action="Details" asp-controller="Product" asp-route-slug="@item.Slug" class="btn btn-outline-success">Details</a></td>
           </tr>
       }
    </tbody>

</table>
<a asp-action="Index" asp-controller="Home" class="btn btn-outline-primary">Home</a>

