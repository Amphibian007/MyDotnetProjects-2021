
@model Table
@{
    ViewData["Title"] = "Details";
}

<h2 class="text-success">Laptop details</h2>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Model Name</th>
            <th>Company</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Id</td>
            <td>@Model.Name</td>
            <td>@Model.Category</td>
            <td>@Model.Price</td>
        </tr>
    </tbody>
</table>
<br />
<a asp-controller="Home" asp-action="Index" class="btn btn-outline-success">Back to landing page</a>


