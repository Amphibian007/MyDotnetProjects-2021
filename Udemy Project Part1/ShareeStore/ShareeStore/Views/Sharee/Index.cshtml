@model List<Sharee>
@{
    ViewBag.Title = "Sharee Collection";
}

<h1 class="text-success">List of Sharees</h1>

<table class="table table-hover table-bordered table-striped">
    <thead>
        <tr>            
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Category</td>
                <td><a class="btn btn-outline-success" asp-controller="Sharee" asp-action="Details" asp-route-slug="@item.slugLink">Details</a></td>
            </tr>
        }
    </tbody>
</table>
<br />
<a asp-controller="Home" asp-action="Index" class="btn btn-success">Back to Home</a>
