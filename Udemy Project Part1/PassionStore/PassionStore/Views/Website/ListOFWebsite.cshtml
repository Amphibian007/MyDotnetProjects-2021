@model List<Website>
@{
    ViewBag.Title = "List of websites";
}

<h1>Website Lists</h1>
<table class="table table-hover table-bordered table-striped">
    <thead>
        <tr>          
            <th scope="col">First</th>
            <th scope="col">Last</th>
            <th scope="col">Handle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>    
                <td><a asp-controller="Website" asp-action="Details" class="btn btn-primary" asp-route-slugLink="@item.Slug">Details</a></td>
            </tr>

        }

    </tbody>
</table>

<a asp-controller="Home" asp-action="Index" class="btn btn-success">Back to Home</a>

